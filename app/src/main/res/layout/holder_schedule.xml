<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvItemHora"
                tools:text="7:00"
                android:gravity="end|bottom"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvItemHoraAmPm"
                tools:text="7:00"
                android:gravity="end|top"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tvItemConferenceName"
                tools:text="Nombre de la conferencia"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/_20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvItemConferenceSpeakers"
                tools:text="Speker name"
                android:textColor="@color/colorPrimary"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/_15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvItemTag"
                tools:text="Tag"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/shape_topic"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/_15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
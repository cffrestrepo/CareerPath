<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".view.ui.fragments.SpeakersDetailDialogFragment">

<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Toolbar
        android:id="@+id/toolBarConference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.google.android.material.appbar.AppBarLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img_platzi_conf_2" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:elevation="@dimen/_2dp"
                app:cardCornerRadius="@dimen/_4dp">

                <LinearLayout
                    android:background="@drawable/shape_parrafo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNameSpeaker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_20sp"
                        tools:text="Nombre y apellido" />

                    <TextView
                        android:id="@+id/tvTituloTrabajo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sp"
                        tools:text="Job title" />

                    <TextView
                        android:id="@+id/tvTrabajo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_17sp"
                        tools:text="Trabajo" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_20sp"
                        tools:text="Job title Job title Job title Job title
                        Job title Job title Job title Job title" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>